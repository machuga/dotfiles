# Git Aliases
alias gs="git status"
alias gb="git branch"
alias ga="git add"
alias gaa="git add -A"
alias gco="git checkout"
alias gcam="git commit -a -m"
alias gpusho="git push origin"
alias g="git"
alias co="git co"

# Other aliases
alias ls="ls -G"
alias retag="ctags -R --exclude=.svn --exclude=.git --exclude=node_modules --exclude=tmp *"
alias eretag="ctags -R -e --exclude=.svn --exclude=.git --exclude=node_modules --exclude=tmp --exclude=app/assets *"
# alias retag="ctags -R -f ./.git/tags --exclude=.svn --exclude=.git --exclude=tmp *"

alias be="bundle exec"
alias resrc="source ~/.zshrc"
alias bspec="bundle exec rspec"

# Fucking Apple
alias fucking_webcam="sudo killall VDCAssistant"

alias a0_size="osascript -e 'tell application \"Google Chrome Canary\" to set the bounds of the front window to {100, 150, 1200, 900}'"
alias tmuxs="tmux new-session -s"

alias start_pg="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"

alias frg='rg --files --no-ignore --hidden --follow --glob "!.git/*" --glob "!node_modules/*"'
